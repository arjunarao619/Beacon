<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#004D40</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#004D40</item>
        <item name="android:windowTranslucentStatus">false</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light" />

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#6200EA</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#F50057</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#9E9E9E</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FacebookLoginButton">
        <item name="android:textSize">14sp</item>
        <item name="android:background">#3b5999</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>


